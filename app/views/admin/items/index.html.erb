<!DOCTYPE html>

<div class="container">
	<%= link_to "Create New Item", new_admin_item_path, class: "badge badge-success center" %>
	<div class="row">
		<% @items.each do |item| %>
		<div class="center-block">
			<div class="card border-white" style="width: 7rem;">
				<%= image_tag item.image.url(:thumb), class: "card-img-top" %>
				<div class="card-body">
					<center><p class='small'><strong><%= link_to item.title, item_path(item) %></strong></p>
					<!-- <p>Description: <%= item.description %></p> -->
					<footer>
					<p class='small'>Price: $<%= item.price %></p>
					<p><%= link_to "Edit", edit_admin_item_path(item), class: "badge badge-info"  %></p>
					<% unless item.retired? %>
					<%= link_to "Add to cart", carts_path(item_id: item.id), method: :post, class: "badge badge-primary" %></center>
					<% else %>
				<div class="badge badge-secondary">
					Retired
				</div>
				</footer>
				<% end %>
				</div>
			</div>
		</div>
		<% end %>
	</div>
</div>

</body>
